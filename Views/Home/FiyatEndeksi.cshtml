                    var butunParcaOrtalamaSatisFiyati = 0;
                    var parcaOran = 0;
                    var butunOran = 0;
                    var farkOran = 0;
                    for (var i = 0; i < response.json.data.length; i++) {
                        if (response.json.data[i].urunGrubu == "PARÇA ÜRÜN" || response.json.data[i].urunGrubu == "BÜTÜN PİLİÇ") {
