                "columnDefs": [{
                    "targets": [1],
                    "visible": true
                }],
                "language": {
                    "processing": "Yükleniyor... Lütfen Bekleyin",
                    "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json",
